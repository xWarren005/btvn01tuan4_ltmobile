<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Tiêu đề ứng dụng -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hệ thống Quản lý Thư viện"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#2E7D32"
        android:layout_marginBottom="12dp" />

    <!-- Nhãn sinh viên -->
    <TextView
        android:id="@+id/tvStudentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sinh viên:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Nhập và thay đổi tên sinh viên -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etStudentName"
            android:hint="Nhập tên sinh viên"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/btnChangeStudent"
            android:text="Thay đổi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Nhãn danh sách sách -->
    <TextView
        android:id="@+id/tvBookList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách sách"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <!-- Danh sách sách -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F1F8E9"
        android:padding="8dp"
        tools:listitem="@layout/item_book" />

    <!-- Nút thêm sách -->
    <Button
        android:id="@+id/btnAddBook"
        android:text="Thêm sách mới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
